#!/usr/bin/env bash

BRANCH_NAME=$(git branch -a | grep $1 | head -n 1)

if [[ "$BRANCH_NAME" == "" ]]; then
    echo "No branch found for $1"
    exit 1
fi # [[ "$BRANCH_NAME" == "" ]]

if [[ $BRANCH_NAME == "remotes/origin/" ]]; then
    BRANCH_NAME=${BRANCH_NAME:15}
fi # [[ $BRANCH_NAME == "remotes/origin/" ]]

echo git checkout $BRANCH_NAME
git checkout $BRANCH_NAME

