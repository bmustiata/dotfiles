#
# snippet: if
# w (word boundary),
# m (trim spaces on the right of the script)
# Add an if
#
snippet if "Add an if" wm
:if ${1:&dupliFromTemplateFlag# = 1}
	${VISUAL}${0:}
:endif
endsnippet

#
# snippet: ife
# w (word boundary),
# m (trim spaces on the right of the script)
# Add an if/else
#
snippet ife "Add an if/else" wm
:if ${1:&dupliFromTemplateFlag# = 1}
	${VISUAL}
:else
:  ${0:}
:endif
endsnippet

