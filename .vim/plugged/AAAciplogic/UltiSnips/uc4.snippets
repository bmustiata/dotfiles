#
# snippet: prep_process_var
# w (word boundary),
# m (trim spaces on the right of the script)
# process entries from a VARA object
#
snippet prep_process_var "process entries from a VARA object" wm
:set &${1:HND}#=prep_process_var(${2:object_name})
:process &$1#
:   set &key# = get_process_line(&$1#,1)
:   set &value# = get_process_line(&$1#,2)
:   print "&key# &value#"
:endprocess
endsnippet

