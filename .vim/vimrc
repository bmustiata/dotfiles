
set nocp
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" vundle plugins
" You need to install them first:
" git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
Plugin 'VundleVim/Vundle.vim'

" core init:
Plugin 'file://.vim/bundle/AAAciplogic'

" Cool feature plugins
Plugin 'vim-scripts/guicolorscheme.vim'  " 256 color support
Plugin 'bling/vim-airline'               " cooler status bar
Plugin 'bmustiata/ultisnips'             " UltiSnips, with no nested scripts
Plugin 'brooth/far.vim'                  " Replace across multiple files
Plugin 'scrooloose/nerdcommenter.git'    " Comment sections of code <leader>cc
Plugin 'ntpeters/vim-better-whitespace'  " Whitespace highlight at the end, and chars
Plugin 'bmustiata/vim-todo'              " TODO lists created with ease
Plugin 'ycm-core/YouCompleteMe'          " Autocomplete that integrates with ultisnips
Plugin 'vim-scripts/DirDiff.vim'         " Diff two folders
Plugin 'junegunn/vim-easy-align'         " Align markdown tables using EasyAlign

" Better writing
Plugin 'reedes/vim-wordy'                " Wordy - check texts for bad writing
Plugin 'rhysd/vim-grammarous'            " more write checks
Plugin 'dbmrq/vim-ditto'                 " Check for repeated usage of woards

" source control
Plugin 'airblade/vim-gitgutter'          " Git margins

" Navigation
Plugin 'scrooloose/nerdtree'             " NERDTree, basic navigation
Plugin 'ctrlpvim/ctrlp.vim'              " Fuzzy navigate buffers, and files
Plugin 'dkprice/vim-easygrep'            " Grep across multiple files <leader>vv

" languages support
Plugin 'vim-test/vim-test'
Plugin 'vim-scripts/ingo-library'
Plugin 'vim-scripts/SyntaxRange'
Plugin 'posva/vim-vue'
Plugin 'solarnz/thrift.vim'
Plugin 'bmustiata/vim-uc4.git'
Plugin 'fatih/vim-go'
Plugin 'rust-lang/rust.vim'
Plugin 'leafgarland/typescript-vim.git'
Plugin 'ap/vim-css-color.git'
Plugin 'tpope/vim-markdown.git'
Plugin 'mustache/vim-mustache-handlebars.git'
Plugin 'bmustiata/vim-cucumber'
Plugin 'jparise/vim-graphql'
Plugin 'zchee/vim-flatbuffers'
Plugin 'uarun/vim-protobuf'

Plugin 'prabirshrestha/async.vim'
Plugin 'bmustiata/vim-lsp'

" core final init
Plugin 'file://.vim/bundle/zzzciplogic'

call vundle#end()
filetype plugin indent on

